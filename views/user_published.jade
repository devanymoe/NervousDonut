extends ./layout

block content
  div.container
    p The user is not logged in!
    if user
      each story in userStories
        div.row
          img.image(src= story.image_1)  
          img.image(src= story.image_2)
          img.image(src= story.image_3)
        div.row
          h1= story.title
          p= story.created_at
          p= 'Likes: ' + story.likes
          p= story.text
