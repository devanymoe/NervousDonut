extends ../layout

block content
  div.container.storyContainer
    div.row
      div.col-md-8.col-md-offset-2
        h1= thisUser.first_name + ' ' + thisUser.last_name + "'s Stories"
  each story in userStories
    div.container.storyContainer
      div.row
        div.col-md-8.col-md-offset-2.story
          h1= story.title
          p= 'Written: ' + moment(story.created_at).format("MM/DD/YYYY")
          p= 'Likes: ' + story.likes
          div.threeImages
            div.imageContainer
              img.image(src= story.image_1)  
            div.imageContainer  
              img.image(src= story.image_2)
            div.imageContainer
              img.image(src= story.image_3)
          p= story.text
